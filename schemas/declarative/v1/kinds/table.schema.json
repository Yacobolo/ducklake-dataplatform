{
  "$defs": {
    "ColumnDef": {
      "additionalProperties": false,
      "properties": {
        "comment": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "type": "object"
    },
    "ObjectMeta": {
      "additionalProperties": false,
      "properties": {
        "deletion_protection": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "TableDoc": {
      "additionalProperties": false,
      "properties": {
        "apiVersion": {
          "enum": [
            "duck/v1"
          ],
          "type": "string"
        },
        "kind": {
          "enum": [
            "Table"
          ],
          "type": "string"
        },
        "metadata": {
          "$ref": "#/$defs/ObjectMeta"
        },
        "spec": {
          "$ref": "#/$defs/TableSpec"
        }
      },
      "required": [
        "apiVersion",
        "kind",
        "metadata",
        "spec"
      ],
      "type": "object"
    },
    "TableSpec": {
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "table_type": {
                "const": "EXTERNAL"
              }
            }
          },
          "then": {
            "required": [
              "source_path",
              "file_format"
            ]
          }
        }
      ],
      "properties": {
        "columns": {
          "items": {
            "$ref": "#/$defs/ColumnDef"
          },
          "type": "array"
        },
        "comment": {
          "type": "string"
        },
        "file_format": {
          "type": "string"
        },
        "location_name": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "properties": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "source_path": {
          "type": "string"
        },
        "table_type": {
          "enum": [
            "",
            "MANAGED",
            "EXTERNAL"
          ],
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "$id": "schemas/declarative/v1/kinds/table.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "#/$defs/TableDoc"
    }
  ],
  "title": "Duck declarative Table"
}
